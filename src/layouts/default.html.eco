<!doctype html>
<html>
<head>
  <title><%= @getPreparedTitle() %></title>
  <%- @getBlock("meta").toHTML() %>

  <% for stylesheet in @getCollection("stylesheet").toJSON(): %>
  <link rel="stylesheet" href="<%- @asset(stylesheet.url) %>" />
  <% end %>

</head>
<body>

  <ul>
    <% for page in @getCollection("pages").toJSON(): %>
    <li class="<%= if page.id is @document.id then 'active' else 'inactive' %>">
      <a href="<%= page.url %>">
        <%= page.title %>
      </a>
    </li>
    <% end %>
  </ul>

  <h1><%= @document.title %></h1>
  <%- @content %>

  <%- @jsRequireTree('javascripts', ['prepended.js'], ['appended.js']) %>




</body>
</html>
